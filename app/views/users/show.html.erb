<div class="container">
  <div class="row mb-4">
    <div class="col-2 border p-2"></div>
  <div class="col-10 p-4 border d-flex justify-content-between ms-auto">
    <h2><%= @user.name %></h2>
    <h4 class="mt-4">Number of posts <%= @user.posts.count %></h4>
    <!-- <img src=<%= @user.photo %> > -->
  </div>
  </div>
  <div class="p-4 mb-4 border">
    <h4>Bio</h4>
    <p><%= @user.bio %></p>
  </div>
  <ul class="list-group">
    <% @user.last_three_posts.each_with_index do |post, i| %>
    <li class="list-group-item">
      <h4>Post <%= i %></h4>
      <p><%= post.text %></p>
    </li>
  </ul>
  <p>

  </p>
  <%end %>
</div>
