<div class="container">
  <div class="row mb-4 me-0">
   <span class="col-2"><%= image_tag( @user.photo , size: "120x120", :alt => "user_profile") -%></span>
    <div class="col-10 p-4 pe-n-1 border d-flex justify-content-between">
      <h2><%= @user.name %></h2>
      <h4 class="mt-4">Number of posts <%= @user.posts.count %></h4>
    </div>
  </div>
  <ul class="list-group">
    <% @posts.each_with_index do |post, i| %>
    <li class="list-group-item">
      <h4>Post <%= post.id %></h4>
      <p><%= post.text %></p>
    </li>
    <%end%>
    <li class="list-group-item">
      <% @posts.each do |post| %> <% post.comments.each do |comment, i| %>
      <div class="d-flex align-items-center">
        <h4 class="me-2"><%= comment.author.name %>:</h4>
        <p><%= comment.text %></p>
      </div>
      <%end%> <%end%>
    </li>
  </ul>
</div>
